<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    x:Class="PC.MainForm1"
    Title="Главная" Height="800" Width="1000" WindowStartupLocation="CenterScreen" WindowState="Maximized"
    >

    <Grid>

        <dxwui:PageView Header="Парк ПК" Margin="0,0,5,5">
            <dxwui:PageViewItem Header="ПК">
                <Grid Background="#FFE5E5E5">
                    <dxg:GridControl Name="Grid" AutoGenerateColumns="AddNew" EnableSmartColumnsGeneration="True" Margin="0,0,0,0">
                        <dxg:GridControl.View>
                            <dxg:TableView ShowTotalSummary="True" Margin="0,0,0,0"/>
                        </dxg:GridControl.View>
                    </dxg:GridControl>
                </Grid>
            </dxwui:PageViewItem>
        </dxwui:PageView>

    </Grid>
</dx:ThemedWindow>
